%table
  %thead
    %tr
      - headers.each do |header|
        %th= header
      %th{:colspan => "2"}
  - items.each do |item|
    %tr{:class => cycle('even', 'odd'), :id => dom_id(item)}
      - table_fields_for_item(item, fields, link_options).each do |field|
        = field
      %td{:width => "10px"}= table_default_action(model, item)
      %td{:width => "10px"}= table_action(model, item)
