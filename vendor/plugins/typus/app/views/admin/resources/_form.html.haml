= form_for @item, :url  => options[:options], :html => { :multipart => true } do |form|
  - if @item.errors.any?
    #errorExplanation
      %h3
        = pluralize(@item.errors.count, "error")
        prohibited this page from being saved:
      %ul
        - @item.errors.full_messages.each do |full_message|
          %li= full_message
  %fieldset.inputs
    %ol
      = raw build_form(@fields, form)
  %fieldset.buttons
    %ol
      %li
        = submit_tag options[:button] , :class => "commit"
        or #{link_to _t("Cancel and go back").downcase, :action => "index"}
