<div id="upper-container">	
	<div class="post">
	  <div class="sep">
      <img class="bubble" src="../img/thought_bubble.png" alt="" />
      <p class="date-type"><%= @post.created_at.strftime(" %b %d %Y") %></p>
      <a class="tweetlink" href='http://twitter.com/?status="<%= @post.title %>" by @spyrosl: <%= link_to "", @post %>'>Retweet</a>
    </div>
    <div class="nonsep">
	    <h2><%= @post.title %></h2>
      <ul class="meta-tags">
        <li>#HTML5,</li>
        <li>#Tag two</li>
        <li>Category: General</li>
        <li><%= link_to "Full post & comments", @post %></li>
      </ul>
	    <%= simple_format(@post.body) %>
	  </div>
	</div><!--end of .post-->
	
	<div id="comments">
		
		<h2 class="korny-type">Comments</h2>
		<ul>
			<%= render :partial => "comments/comment", :collection => @post.comments %>
		</ul>
		<p class="korny-type-small">Add your thoughts</p>
		<%= render "comments/form" %>
	</div><!--end of #comments-->
</div><!--end of #upper-container-->